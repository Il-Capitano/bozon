function size_test(s: [: auto], expected_size: usize)
{
	if (__builtin_slice_size(s) != expected_size) unreachable;
}

function main()
{
	size_test([: i8](), 0);
	size_test([: i16](), 0);
	size_test([: i32](), 0);
	size_test([: i64](), 0);
	let a = [5: i8]();
	size_test(a, 5);
	let a = [5: i16]();
	size_test(a, 5);
	let a = [5: i32]();
	size_test(a, 5);
	let a = [5: i64]();
	size_test(a, 5);
	let a = [5, 2, 10, 9: i64]();
	size_test(a, 5);

	let a = [5, 2, 10, 9: i64]();
	let s: [: auto] = a;
	size_test(s, a.size());
	let size = __builtin_slice_end_ptr(s) - __builtin_slice_begin_ptr(s);
	size_test(s, size as usize);
}
