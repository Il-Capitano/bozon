function main()
{
	let s = "";
	mut p: ?*uint8 = null;
	static_assert(sizeof p <= sizeof s);
	__builtin_memcpy(&p, &s, sizeof p);
	if (p != __builtin_str_begin_ptr(s)) unreachable;

	let s = "hello";
	mut p: ?*uint8 = null;
	static_assert(sizeof p <= sizeof s);
	__builtin_memcpy(&p, &s, sizeof p);
	if (p != __builtin_str_begin_ptr(s)) unreachable;

	let a = [10: uint8]();
	let s = __builtin_str_from_ptrs(&a[0], &a[0] + 10);
	if (__builtin_str_begin_ptr(s) != &a[0]) unreachable;
}
