struct vec3<T: typename>
{
	static_assert(T == float32 || T == float64, "only floating point types are allowed");

	type value_type = T;

	.x: T;
	.y: T;
	.z: T;
}

function abs(v: #const vec3) -> (typeof v).value_type
{
	return std::sqrt(v.x * v.x + v.y * v.y + v.z * v.z);
}

function generic_type_test()
{
	let v = vec3<float32>[ 1.0f32, 0.0f32, 0.0f32 ];

	static_assert(typeof v.x == float32);
	static_assert((typeof v).value_type == float32);

	std::print("v = ({}, {}, {})\n", v.x, v.y, v.z);
	std::print("|v| = {}\n", v.abs());

	let v = std::vector<int32>();
	v.push_back(1);
	std::assert(v.size() == 1u);
	std::assert(v[0] == 1);
	v.push_back(2);
	v.emplace_back(3);
	v.emplace_back();

	for (const i in v)
	{
		std::print("{}, ", i);
	}
	std::print("\n");
}

struct unique_ptr<T: typename>
{
	type _self_t = unique_ptr<T>;

	._ptr: *T;

	constructor(ptr: *T)
	{
		return _self_t[ ptr ];
	}

	destructor(&self)
	{
		__builtin_destruct_value(*self._ptr);
		std::free(self._ptr);
	}

	constructor(other: &const _self_t) = __delete__;
	constructor(other: move _self_t) = __default__;
	operator = (lhs: &_self_t, rhs: &const _self_t) = __delete__;
	operator = (lhs: &_self_t, rhs: _self_t) = __default__;

	operator * (self: &_self_t) -> &T
	{
		return *self._ptr;
	}

	operator * (self: &const _self_t) -> &const T
	{
		return *self._ptr;
	}
}

function add_two(n: int32) -> int32
{
	return n + 2;
}

function unique_ptr_test()
{
	let ptr = unique_ptr<int32>(std::malloc(int32, 1));
	ptr = unique_ptr<int32>(std::malloc(int32, 1));

	// ptr = ptr;

	*ptr = 3;
	std::print("{}\n", ptr->add_two());
}

