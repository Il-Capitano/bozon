consteval DOUBLE_MANTISSA_BITS = 52;
consteval DOUBLE_EXPONENT_BITS = 11;
consteval DOUBLE_BIAS = 1023;

consteval POW10_ADDITIONAL_BITS = 120u;

function mulShift_mod1e9(m: u64, mul: *u64, j: i32) -> u32
{
	mut high0: u64;                            // 64
	let low0 = umul128(m, *(mul + 0), &high0); // 0
	mut high1: u64;                            // 128
	let low1 = umul128(m, *(mul + 1), &high1); // 64
	mut high2: u64;                            // 192
	let low2 = umul128(m, *(mul + 2), &high2); // 128
	@maybe_unused let s0low = low0;            // 0
	let s0high = low1 + high0;                 // 64
	let c1 = (s0high < low1) as u32;
	let s1low = low2 + high1 + c1;             // 128
	let c2 = (s1low < low2) as u32; // high1 + c1 can't overflow, so compare against low2
	let s1high = high2 + c2;                   // 192
	std::assert(j >= 128);
	std::assert(j <= 180);
	if (j < 160) // j: [128, 160)
	{
		let r0: u64 = mod1e9(s1high);
		let r1: u64 = mod1e9((r0 << 32) | (s1low >> 32));
		let r2: u64 = ((r1 << 32) | (s1low & 0xffffffffu64));
		return mod1e9(r2 >> (j - 128));
	}
	else // j: [160, 192)
	{
		let r0: u64 = mod1e9(s1high);
		let r1: u64 = ((r0 << 32) | (s1low >> 32));
		return mod1e9(r1 >> (j - 160));
	}
}

// Convert `digits` to a sequence of decimal digits. Append the digits to the result.
// The caller has to guarantee that:
//   10^(olength-1) <= digits < 10^olength
// e.g., by passing `olength` as `decimalLength9(digits)`.
function append_n_digits(olength: u32, mut digits: u32, result: *mut u8)
{
	mut i = 0u32;
	while (digits >= 10000)
	{
		// https://bugs.llvm.org/show_bug.cgi?id=38217
		let c = digits - 10000 * (digits / 10000);
		digits /= 10000;
		let c0 = (c % 100) << 1;
		let c1 = (c / 100) << 1;
		std::trivially_copy_values(result + olength - i - 2, DIGIT_TABLE.begin() + c0, 2);
		std::trivially_copy_values(result + olength - i - 4, DIGIT_TABLE.begin() + c1, 2);
		i += 4;
	}
	if (digits >= 100)
	{
		let c = (digits % 100) << 1;
		digits /= 100;
		std::trivially_copy_values(result + olength - i - 2, DIGIT_TABLE.begin() + c, 2);
		i += 2;
	}
	if (digits >= 10)
	{
		let c = digits << 1;
		std::trivially_copy_values(result + olength - i - 2, DIGIT_TABLE.begin() + c, 2);
	}
	else
	{
		*result = ('0' + digits) as u8;
	}
}

// Convert `digits` to a sequence of decimal digits. Print the first digit, followed by a decimal
// dot '.' followed by the remaining digits. The caller has to guarantee that:
//   10^(olength-1) <= digits < 10^olength
// e.g., by passing `olength` as `decimalLength9(digits)`.
function append_d_digits(olength: u32, mut digits: u32, result: *mut u8)
{
	mut i = 0u32;
	while (digits >= 10000)
	{
		// https://bugs.llvm.org/show_bug.cgi?id=38217
		let c = digits - 10000 * (digits / 10000);
		digits /= 10000;
		let c0 = (c % 100) << 1;
		let c1 = (c / 100) << 1;
		std::trivially_copy_values(result + olength + 1 - i - 2, DIGIT_TABLE.begin() + c0, 2);
		std::trivially_copy_values(result + olength + 1 - i - 4, DIGIT_TABLE.begin() + c1, 2);
		i += 4;
	}
	if (digits >= 100)
	{
		let c = (digits % 100) << 1;
		digits /= 100;
		std::trivially_copy_values(result + olength + 1 - i - 2, DIGIT_TABLE.begin() + c, 2);
		i += 2;
	}
	if (digits >= 10)
	{
		let c = digits << 1;
		*(result + 2) = DIGIT_TABLE[c + 1];
		*(result + 1) = '.' as u8;
		*(result + 0) = DIGIT_TABLE[c];
	}
	else
	{
		*(result + 1) = '.' as u8;
		*(result + 0) = ('0' + digits) as u8;
	}
}

// Convert `digits` to decimal and write the last `count` decimal digits to result.
// If `digits` contains additional digits, then those are silently ignored.
function append_c_digits(count: u32, mut digits: u32, result: *mut u8)
{
	// Copy pairs of digits from DIGIT_TABLE.
	mut i = 0u32;
	for (; i < count - 1; i += 2)
	{
		let c = (digits % 100) << 1;
		digits /= 100;
		std::trivially_copy_values(result + count - i - 2, DIGIT_TABLE.begin() + c, 2);
	}
	// Generate the last digit if count is odd.
	if (i < count)
	{
		let c = '0' + (digits % 10);
		*(result + count - i - 1) = c as u8;
	}
}

// Convert `digits` to decimal and write the last 9 decimal digits to result.
// If `digits` contains additional digits, then those are silently ignored.
function append_nine_digits(mut digits: u32, result: *mut u8)
{
	if (digits == 0)
	{
		std::trivially_set_values(result, '0' as u8, 9);
		return;
	}

	for (mut i = 0u32; i < 5; i += 4)
	{
		// https://bugs.llvm.org/show_bug.cgi?id=38217
		let c = digits - 10000 * (digits / 10000);
		digits /= 10000;
		let c0 = (c % 100) << 1;
		let c1 = (c / 100) << 1;
		std::trivially_copy_values(result + 7 - i, DIGIT_TABLE.begin() + c0, 2);
		std::trivially_copy_values(result + 5 - i, DIGIT_TABLE.begin() + c1, 2);
	}
	*result = ('0' + digits) as u8;
}

function indexForExponent(e: u32) -> u32
{
	return (e + 15) / 16;
}

function pow10BitsForIndex(idx: u32) -> u32
{
	return 16 * idx + POW10_ADDITIONAL_BITS;
}

function lengthForIndex(idx: u32) -> u32
{
	// +1 for ceil, +16 for mantissa, +8 to round up when dividing by 9
	return (log10Pow2(16 * idx) + 1 + 16 + 8) / 9;
}

function copy_special_str_printf(result: *mut u8, sign: bool, mantissa: u64) -> i32
{
	if (mantissa != 0)
	{
		std::trivially_copy_values(result, "nan".begin_ptr(), "nan".size());
		return 3;
	}
	if (sign)
	{
		*result = '-' as u8;
	}
	std::trivially_copy_values(result + sign as u32, "Infinity".begin_ptr(), "Infinity".size());
	return sign as i32 + 8;
}

export function d2fixed_buffered_n(d: f64, precision: u32, result: *mut u8) -> i32
{
	let bits = double_to_bits(d);

	// Decode bits into sign, mantissa, and exponent.
	let ieeeSign = ((bits >> (DOUBLE_MANTISSA_BITS + DOUBLE_EXPONENT_BITS)) & 1u64) != 0;
	let ieeeMantissa = bits & ((1u64 << DOUBLE_MANTISSA_BITS) - 1);
	let ieeeExponent = (bits >> DOUBLE_MANTISSA_BITS) as u32 & ((1u32 << DOUBLE_EXPONENT_BITS) - 1);

	// Case distinction; exit early for the easy cases.
	if (ieeeExponent == ((1u32 << DOUBLE_EXPONENT_BITS) - 1))
	{
		return copy_special_str_printf(result, ieeeSign, ieeeMantissa);
	}
	if (ieeeExponent == 0 && ieeeMantissa == 0)
	{
		mut index = 0;
		if (ieeeSign)
		{
			*(result + index) = '-' as u8;
			++index;
		}
		*(result + index) = '0' as u8;
		++index;
		if (precision > 0)
		{
			*(result + index) = '.' as u8;
			++index;
			std::trivially_set_values(result + index, '0' as u8, precision);
			index += precision as i32;
		}
		return index;
	}

	mut e2: i32;
	mut m2: u64;
	if (ieeeExponent == 0)
	{
		e2 = 1 - DOUBLE_BIAS - DOUBLE_MANTISSA_BITS;
		m2 = ieeeMantissa;
	}
	else
	{
		e2 = ieeeExponent as i32 - DOUBLE_BIAS - DOUBLE_MANTISSA_BITS;
		m2 = (1u64 << DOUBLE_MANTISSA_BITS) | ieeeMantissa;
	}

	mut index = 0;
	mut nonzero = false;
	if (ieeeSign)
	{
		*(result + index) = '-' as u8;
		++index;
	}
	if (e2 >= -52)
	{
		let idx = if (e2 < 0) { 0u32 } else { indexForExponent(e2 as u32) };
		let p10bits = pow10BitsForIndex(idx);
		let len = lengthForIndex(idx) as i32;
		for (mut i = len - 1; i >= 0; --i)
		{
			let j = ((p10bits - e2 as u32));
			// Temporary: j is usually around 128, and by shifting a bit, we push it to 128 or above, which is
			// a slightly faster code path in mulShift_mod1e9. Instead, we can just increase the multipliers.
			let digits = mulShift_mod1e9(m2 << 8, POW10_SPLIT[POW10_OFFSET[idx] as i32 + i].begin(), j as i32 + 8);
			if (nonzero)
			{
				append_nine_digits(digits, result + index);
				index += 9;
			}
			else if (digits != 0)
			{
				let olength = decimalLength9(digits);
				append_n_digits(olength, digits, result + index);
				index += olength as i32;
				nonzero = true;
			}
		}
	}
	if (!nonzero)
	{
		*(result + index) = '0' as u8;
		++index;
	}
	if (precision > 0)
	{
		*(result + index) = '.' as u8;
		++index;
	}
	if (e2 < 0)
	{
		let idx = -e2 / 16;
		let blocks = precision / 9 + 1;
		// 0 = don't round up; 1 = round up unconditionally; 2 = round up if odd.
		mut roundUp = 0;
		mut i = 0u32;
		if (blocks <= MIN_BLOCK_2[idx])
		{
			i = blocks;
			std::trivially_set_values(result + index, '0' as u8, precision);
			index += precision as i32;
		}
		else if (i < MIN_BLOCK_2[idx])
		{
			i = MIN_BLOCK_2[idx];
			std::trivially_set_values(result + index, '0' as u8, 9 * i);
			index += 9 * i as i32;
		}
		for (; i < blocks; ++i)
		{
			let j = ADDITIONAL_BITS_2 + (-e2 - 16 * idx);
			let p = POW10_OFFSET_2[idx] + i as u32 - MIN_BLOCK_2[idx];
			if (p >= POW10_OFFSET_2[idx + 1])
			{
				// If the remaining digits are all 0, then we might as well use memset.
				// No rounding required in this case.
				let fill = precision - 9 * i;
				std::trivially_set_values(result + index, '0' as u8, fill);
				index += fill as i32;
				break;
			}
			// Temporary: j is usually around 128, and by shifting a bit, we push it to 128 or above, which is
			// a slightly faster code path in mulShift_mod1e9. Instead, we can just increase the multipliers.
			mut digits = mulShift_mod1e9(m2 << 8, POW10_SPLIT_2[p].begin(), j + 8);
			if (i < blocks - 1)
			{
				append_nine_digits(digits, result + index);
				index += 9;
			}
			else
			{
				let maximum = precision - 9 * i;
				mut lastDigit = 0u32;
				for (mut k = 0u32; k < 9 - maximum; ++k)
				{
					lastDigit = digits % 10;
					digits /= 10;
				}
				if (lastDigit != 5)
				{
					roundUp = (lastDigit > 5) as i32;
				}
				else
				{
					// Is m * 10^(additionalDigits + 1) / 2^(-e2) integer?
					let requiredTwos = -e2 - precision as i32 - 1;
					let trailingZeros = requiredTwos <= 0
						|| (requiredTwos < 60 && multipleOfPowerOf2(m2, requiredTwos as u32));
					if (trailingZeros)
					{
						roundUp = 2;
					}
					else
					{
						roundUp = 1;
					}
				}
				if (maximum > 0)
				{
					append_c_digits(maximum, digits, result + index);
					index += maximum as i32;
				}
				break;
			}
		}
		if (roundUp != 0)
		{
			mut roundIndex = index;
			mut dotIndex = 0; // '.' can't be located at index 0
			while (true)
			{
				--roundIndex;
				mut c: char;
				if (roundIndex == -1 || (c = *(result + roundIndex) as char, c == '-'))
				{
					*(result + roundIndex + 1) = '1' as u8;
					if (dotIndex > 0)
					{
						*(result + dotIndex) = '0' as u8;
						*(result + dotIndex + 1) = '.' as u8;
					}
					*(result + index) = '0' as u8;
					++index;
					break;
				}
				if (c == '.')
				{
					dotIndex = roundIndex;
					continue;
				}
				else if (c == '9')
				{
					*(result + roundIndex) = '0' as u8;
					roundUp = 1;
					continue;
				}
				else
				{
					if (roundUp == 2 && c as i32 % 2 == 0) {
						break;
					}
					*(result + roundIndex) = (c + 1) as u8;
					break;
				}
			}
		}
	}
	else
	{
		std::trivially_set_values(result + index, '0' as u8, precision);
		index += precision as i32;
	}
	return index;
}

export function d2fixed_buffered(d: f64, precision: u32, result: *mut u8)
{
	let len = d2fixed_buffered_n(d, precision, result);
	*(result + len) = '\x00' as u8;
}

export function d2fixed(d: f64, precision: u32) -> ?*mut u8
{
	let buffer_alloc = std::libc::malloc(2000);
	if (buffer_alloc == null)
	{
		return null;
	}
	let buffer = __builtin_pointer_cast(*mut u8, buffer_alloc.get_value());
	let index = d2fixed_buffered_n(d, precision, buffer);
	*(buffer + index) = '\x00' as u8;
	return buffer;
}



export function d2exp_buffered_n(d: f64, mut precision: u32, result: *mut u8) -> i32
{
	let bits = double_to_bits(d);

	// Decode bits into sign, mantissa, and exponent.
	let ieeeSign = ((bits >> (DOUBLE_MANTISSA_BITS + DOUBLE_EXPONENT_BITS)) & 1u64) != 0;
	let ieeeMantissa = bits & ((1u64 << DOUBLE_MANTISSA_BITS) - 1);
	let ieeeExponent = (bits >> DOUBLE_MANTISSA_BITS) as u32 & ((1u32 << DOUBLE_EXPONENT_BITS) - 1);

	// Case distinction; exit early for the easy cases.
	if (ieeeExponent == ((1u32 << DOUBLE_EXPONENT_BITS) - 1))
	{
		return copy_special_str_printf(result, ieeeSign, ieeeMantissa);
	}
	if (ieeeExponent == 0 && ieeeMantissa == 0)
	{
		mut index = 0;
		if (ieeeSign)
		{
			*(result + index) = '-' as u8;
			++index;
		}
		*(result + index) = '0' as u8;
		++index;
		if (precision > 0)
		{
			*(result + index) = '.' as u8;
			++index;
			std::trivially_set_values(result + index, '0' as u8, precision);
			index += precision as i32;
		}
		std::trivially_copy_values(result + index, "e+00".begin_ptr(), 4);
		index += 4;
		return index;
	}

	mut e2: i32;
	mut m2: u64;
	if (ieeeExponent == 0)
	{
		e2 = 1 - DOUBLE_BIAS - DOUBLE_MANTISSA_BITS;
		m2 = ieeeMantissa;
	}
	else
	{
		e2 = ieeeExponent as i32 - DOUBLE_BIAS - DOUBLE_MANTISSA_BITS;
		m2 = (1u64 << DOUBLE_MANTISSA_BITS) | ieeeMantissa;
	}

	let printDecimalPoint = precision > 0;
	++precision;
	mut index = 0;
	if (ieeeSign)
	{
		*(result + index) = '-' as u8;
	}
	mut digits = 0u32;
	mut printedDigits = 0u32;
	mut availableDigits = 0u32;
	mut exp = 0i32;
	if (e2 >= -52)
	{
		let idx = if (e2 < 0) { 0u32 } else { indexForExponent(e2 as u32) };
		let p10bits = pow10BitsForIndex(idx);
		let len = lengthForIndex(idx) as i32;
		for (mut i = len - 1; i >= 0; --i)
		{
			let j = ((p10bits - e2 as u32));
			// Temporary: j is usually around 128, and by shifting a bit, we push it to 128 or above, which is
			// a slightly faster code path in mulShift_mod1e9. Instead, we can just increase the multipliers.
			digits = mulShift_mod1e9(m2 << 8, POW10_SPLIT[POW10_OFFSET[idx] as i32 + i].begin(), (j + 8) as i32);
			if (printedDigits != 0)
			{
				if (printedDigits + 9 > precision)
				{
					availableDigits = 9;
					break;
				}
				append_nine_digits(digits, result + index);
				index += 9;
				printedDigits += 9;
			}
			else if (digits != 0)
			{
				availableDigits = decimalLength9(digits);
				exp = i * 9 + availableDigits as i32 - 1;
				if (availableDigits > precision)
				{
					break;
				}
				if (printDecimalPoint)
				{
					append_d_digits(availableDigits, digits, result + index);
					index += availableDigits as i32 + 1; // +1 for decimal point
				}
				else
				{
					*(result + index) = ('0' + digits) as u8;
					++index;
				}
				printedDigits = availableDigits;
				availableDigits = 0;
			}
		}
	}

	if (e2 < 0 && availableDigits == 0)
	{
		let idx = -e2 / 16;
		for (mut i = MIN_BLOCK_2[idx] as i32; i < 200; ++i)
		{
			let j = ADDITIONAL_BITS_2 + (-e2 - 16 * idx);
			let p = POW10_OFFSET_2[idx] + i as u32 - MIN_BLOCK_2[idx];
			// Temporary: j is usually around 128, and by shifting a bit, we push it to 128 or above, which is
			// a slightly faster code path in mulShift_mod1e9. Instead, we can just increase the multipliers.
			if (p >= POW10_OFFSET_2[idx + 1])
			{
				digits = 0;
			}
			else
			{
				digits = mulShift_mod1e9(m2 << 8, POW10_SPLIT_2[p].begin(), j + 8);
			}
			if (printedDigits != 0)
			{
				if (printedDigits + 9 > precision)
				{
					availableDigits = 9;
					break;
				}
				append_nine_digits(digits, result + index);
				index += 9;
				printedDigits += 9;
			}
			else if (digits != 0)
			{
				availableDigits = decimalLength9(digits);
				exp = -(i + 1) * 9 + availableDigits as i32 - 1;
				if (availableDigits > precision)
				{
					break;
				}
				if (printDecimalPoint)
				{
					append_d_digits(availableDigits, digits, result + index);
					index += availableDigits as i32 + 1; // +1 for decimal point
				}
				else
				{
					*(result + index) = ('0' + digits) as u8;
					++index;
				}
				printedDigits = availableDigits;
				availableDigits = 0;
			}
		}
	}

	let maximum = precision - printedDigits;
	if (availableDigits == 0)
	{
		digits = 0;
	}
	mut lastDigit = 0u32;
	if (availableDigits > maximum)
	{
		for (mut k = 0u32; k < availableDigits - maximum; ++k)
		{
			lastDigit = digits % 10;
			digits /= 10;
		}
	}
	// 0 = don't round up; 1 = round up unconditionally; 2 = round up if odd.
	mut roundUp = 0;
	if (lastDigit != 5)
	{
		roundUp = (lastDigit > 5) as i32;
	}
	else
	{
		// Is m * 2^e2 * 10^(precision + 1 - exp) integer?
		// precision was already increased by 1, so we don't need to write + 1 here.
		let rexp = precision as i32 - exp;
		let requiredTwos = -e2 - rexp;
		mut trailingZeros = requiredTwos <= 0
			|| (requiredTwos < 60 && multipleOfPowerOf2(m2, requiredTwos as u32));
		if (rexp < 0)
		{
			let requiredFives = -rexp;
			trailingZeros = trailingZeros && multipleOfPowerOf5(m2, requiredFives as u32);
		}
		if (trailingZeros)
		{
			roundUp = 2;
		}
		else
		{
			roundUp = 1;
		}
	}
	if (printedDigits != 0)
	{
		if (digits == 0)
		{
			std::trivially_set_values(result + index, '0' as u8, maximum);
		}
		else
		{
			append_c_digits(maximum, digits, result + index);
		}
		index += maximum as i32;
	}
	else
	{
		if (printDecimalPoint)
		{
			append_d_digits(maximum, digits, result + index);
			index += maximum as i32 + 1; // +1 for decimal point
		}
		else
		{
			*(result + index) = ('0' + digits) as u8;
			++index;
		}
	}
	if (roundUp != 0)
	{
		mut roundIndex = index;
		while (true)
		{
			--roundIndex;
			mut c: char;
			if (roundIndex == -1 || (c = *(result + roundIndex) as char, c == '-'))
			{
				*(result + roundIndex + 1) = '1' as u8;
				++exp;
				break;
			}
			if (c == '.')
			{
				continue;
			}
			else if (c == '9')
			{
				*(result + roundIndex) = '0' as u8;
				roundUp = 1;
				continue;
			}
			else
			{
				if (roundUp == 2 && c as i32 % 2 == 0)
				{
					break;
				}
				*(result + roundIndex) = (c + 1) as u8;
				break;
			}
		}
	}
	*(result + index) = 'e' as u8;
	++index;
	if (exp < 0)
	{
		*(result + index) = '-' as u8;
		++index;
		exp = -exp;
	}
	else
	{
		*(result + index) = '+' as u8;
		++index;
	}

	if (exp >= 100)
	{
		let c = exp % 10;
		std::trivially_copy_values(result + index, DIGIT_TABLE.begin() + 2 * (exp / 10), 2);
		*(result + index + 2) = ('0' + c) as u8;
		index += 3;
	}
	else
	{
		std::trivially_copy_values(result + index, DIGIT_TABLE.begin() + 2 * exp, 2);
		index += 2;
	}

	return index;
}

export function d2exp_buffered(d: f64, precision: u32, result: *mut u8)
{
	let len = d2exp_buffered_n(d, precision, result);
	*(result + len) = '\x00' as u8;
}

export function d2exp(d: f64, precision: u32) -> ?*mut u8
{
	let buffer_alloc = std::libc::malloc(2000);
	if (buffer_alloc == null)
	{
		return null;
	}
	let buffer = __builtin_pointer_cast(*mut u8, buffer_alloc.get_value());
	let index = d2exp_buffered_n(d, precision, buffer);
	*(buffer + index) = '\x00' as u8;
	return buffer;
}


