		}
	}
	if (capital_e)
	{
		*(result + index) = 'E' as u8;
	}
	else
	{
		*(result + index) = 'e' as u8;
	}
	++index;
	if (exp < 0)
	{
		*(result + index) = '-' as u8;
		++index;
		exp = -exp;
	}
	else
	{
		*(result + index) = '+' as u8;
